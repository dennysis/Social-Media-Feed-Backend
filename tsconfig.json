{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "long", "jest","mime"]  // removed 'mime' based on previous recommendation
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
